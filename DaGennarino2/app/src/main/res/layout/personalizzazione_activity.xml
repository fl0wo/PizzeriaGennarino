<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalizzazioneActivity"
    android:id="@+id/customizza_per">

    <com.gc.materialdesign.views.ButtonFlat
        android:layout_width="103dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:onClick="showBill"
        android:text="BILL"
        android:textColor="@color/white" >

    </com.gc.materialdesign.views.ButtonFlat>

    <com.gc.materialdesign.views.ButtonFlat
        android:layout_width="103dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="281dp"
        android:layout_marginRight="281dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:onClick="clearScelte"
        android:text="RESET"
        android:textColor="@color/white" >

    </com.gc.materialdesign.views.ButtonFlat>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="78dp">

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_below="@+id/container"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp">

            <LinearLayout
                android:id="@+id/linear_check"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <TextView
        android:id="@+id/descrizione"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@+id/container"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-221dp"
        android:gravity="center"
        android:text="Selezionare una pizza per vederne la descrizione."
        android:textColor="#000" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/main_scontrino"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark">


        <RelativeLayout
            android:layout_width="276dp"
            android:layout_height="401dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/scontrino_layout">


            <TextView
                android:id="@+id/num_pizze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:text="N_PIZZE"
                android:textColor="@color/half_black_real"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/prezzo_totale_fotonico"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="177dp"
                android:layout_marginLeft="177dp"
                android:layout_marginTop="273dp"
                android:text="Tot"
                android:textColor="@color/half_black_real"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="235dp"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="377dp"
                android:gravity="center"
                android:text="Copyright Â© 2018-2019 Venice ITA, Inc. All rights reserved. Terms of Use | Privacy Policy REVISED."
                android:textColor="@color/half_black_real"
                android:textSize="7dp" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="192dp"
                android:layout_marginLeft="192dp"
                android:layout_marginTop="44dp"
                android:text="Prezzo Totale"
                android:textColor="@color/white_pressed"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="44dp"
                android:text="Pizze"
                android:textColor="@color/white_pressed"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="44dp"
                android:text="N"
                android:textColor="@color/white_pressed"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/codice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="349dp"
                android:gravity="center"
                android:text="0000000000000000000000000000000"
                android:textColor="@color/half_black_real"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="53dp"
                app:srcCompat="@drawable/codice_barre" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="59dp">

                <LinearLayout
                    android:id="@+id/linear_prodotti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="15dp"
            android:text="IL TUO CONTO : "
            android:textColor="@color/bianco"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:onClick="backToPizzas"
            android:rotation="180"
            app:srcCompat="@drawable/ic_dietro" />

    </RelativeLayout>


</RelativeLayout>