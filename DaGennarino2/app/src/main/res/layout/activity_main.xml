<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:id="@+id/customizza">


    <com.agilie.circularpicker.ui.view.CircularPickerView
        android:id="@+id/slice_picker"
        android:layout_width="217dp"
        android:layout_height="213dp"
        android:layout_alignStart="@+id/pizza_svg"
        android:layout_alignLeft="@+id/pizza_svg"
        android:layout_alignTop="@+id/pizza_svg"
        android:layout_alignEnd="@+id/pizza_svg"
        android:layout_alignRight="@+id/pizza_svg"
        android:layout_alignBottom="@+id/pizza_svg"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp" />

    <ImageView
        android:id="@+id/pizza_svg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleX=".65"
        android:scaleY=".65"
        fab:srcCompat="@drawable/ic_pizza" />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/buttonflat"
        android:layout_width="103dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimary"
        android:onClick="nextActivity"
        android:text="NEXT"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="ALLUNGA IL BORDO DELLA PIZZA PER TAGLIARE LA PIZZA IN FETTE"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />


</RelativeLayout>